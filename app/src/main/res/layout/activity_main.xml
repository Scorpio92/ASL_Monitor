<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_above="@+id/textView14">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#fff80300"
            android:gravity="center" />
    </ScrollView>

    <Button
        style="@style/ThemeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/asl_protocol"
        android:id="@+id/button"
        android:onClick="protocolClick"
        android:focusable="true"
        android:elegantTextHeight="false"
        android:ellipsize="marquee"
        android:clickable="true"
        android:gravity="center"
        android:textColor="#0ac803"
        android:singleLine="false"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff0ac803"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:layout_gravity="center"
        android:gravity="center|top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#ff0ac803"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#ff0ac803"
        android:textStyle="bold"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/permissions_but"
        android:id="@+id/button3"
        style="@style/ThemeButton"
        android:clickable="true"
        android:gravity="center"
        android:onClick="permissionClick"
        android:textColor="#0ac803"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="13sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:onClick="aslimg_click"
        android:gravity="center"
        android:textColor="#fff80300"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_but"
        android:id="@+id/button2"
        android:textColor="#0ac803"
        android:gravity="center"
        android:clickable="true"
        android:onClick="detectedClick"
        style="@style/ThemeButton"
        android:textSize="13sp"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:max="0"
        android:background="@android:color/black"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress_bar"
        android:minWidth="120dp"
        android:minHeight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proto_progress"
        android:id="@+id/textView13"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0ac803" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
